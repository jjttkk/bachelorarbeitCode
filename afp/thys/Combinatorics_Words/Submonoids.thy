lemma basisD: "x \<in> \<BB> G \<Longrightarrow> x \<in>B G"
  unfolding basis_def by simp

lemma emp_not_basis: "x \<in> \<BB> G \<Longrightarrow> x \<noteq> \<epsilon>"
